<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF157"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="155dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    android:alpha="0.8"
                    android:background="#D3D3D3"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="16dp"
                    android:text="Attendance Tracker"
                    android:textAllCaps="false"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#00008B"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Subject"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"
                            android:text="Attended"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:text="Total"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Subject 1"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <EditText
                            android:id="@+id/textbox_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter no."
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <EditText
                            android:id="@+id/totalbox_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter No."
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Subject 2"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <EditText
                            android:id="@+id/textbox_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter no."
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <EditText
                            android:id="@+id/totalbox_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter No."
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Subject 3"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <EditText
                            android:id="@+id/textbox_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter no."
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <EditText
                            android:id="@+id/totalbox_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter No."
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Subject 4"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <EditText
                            android:id="@+id/textbox_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter no."
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                        <EditText
                            android:id="@+id/totalbox_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:hint="Enter No."
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/enter_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#000088"
                        android:text="TRACK"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:onClick="process"/>

                    <TextView
                        android:id="@+id/display_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="16dp"
                        android:text=""
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>